<h1>every restaurant details</h1>

<h2> <%= @restaurant.name %> </h2>

<p><strong>Address</strong> <%= @restaurant.address %></p>
<p><strong>Phone number</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category</strong> <%= @restaurant.category %> </p>

<strong>Reviews</strong>
<% @restaurant.reviews.each do |review| %>
<li> <%= review.content %> ------ <%= review.rating %>/5 </li>
<% end %>

<p><%= link_to "write a review ", new_restaurant_review_path(@restaurant)  %> </p>
<p><%= link_to "back to restaurant list", restaurants_path  %></p>

